--@block create or replace users table
CREATE OR REPLACE TABLE NBA_APP.users(
    name VARCHAR(30),
    email VARCHAR(50) PRIMARY KEY,
    password VARCHAR(50),
    room_id VARCHAR(10),
    team_id VARCHAR(50)
  );
